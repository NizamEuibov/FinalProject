<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_navgraph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/emailFragment"
        android:name="com.example.finalproject.ui.registrationfragments.fragments.EmailFragment"
        android:label="EmailFragment">
        <action
            android:id="@+id/action_emailFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />

    </fragment>

    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.example.finalproject.ui.registrationfragments.fragments.PasswordFragment"
        android:label="PasswordFragment">
        <action
            android:id="@+id/action_passwordFragment_to_genderFragment"
            app:destination="@id/genderFragment" />

    </fragment>

    <fragment
        android:id="@+id/genderFragment"
        android:name="com.example.finalproject.ui.registrationfragments.fragments.GenderFragment"
        android:label="GenderFragment">
        <action
            android:id="@+id/action_genderFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
    </fragment>

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.finalproject.ui.registrationfragments.fragments.NameFragment"
        android:label="NameFragment" >

        <action
            android:id="@+id/action_nameFragment_to_artistsFragment"
            app:destination="@id/artistsFragment" />
    </fragment>

    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.example.finalproject.ui.artistsfragment.fragment.ArtistsFragment"
        android:label="fragment_artists"
        tools:layout="@layout/fragment_artists" >

        <action
            android:id="@+id/action_artistsFragment_to_logInFragment"
            app:destination="@id/logInFragment"
            app:popUpTo="@id/logInFragment" />
        <action
            android:id="@+id/action_artistsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/podcatsFragment"
        android:name="com.example.finalproject.ui.podcastfragment.fragment.PodcastsFragment"
        android:label="fragment_podcats"
        tools:layout="@layout/fragment_podcats" />
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.finalproject.ui.loginfragments.fragments.LogUiFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_ui" >
        <action
            android:id="@+id/action_logInFragment_to_emailFragment"
            app:destination="@id/emailFragment" />

        <action
            android:id="@+id/action_logInFragment_to_loginnFragment"
            app:destination="@id/loginnFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginnFragment"
        android:name="com.example.finalproject.ui.loginfragments.fragments.LoginnFragment"
        android:label="fragment_login_"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_loginnFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.finalproject.ui.homefragment.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.finalproject.ui.serachfragments.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_searchAllFragment"
            app:destination="@id/searchAllFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchAllFragment"
        android:name="com.example.finalproject.ui.serachfragments.fragments.SearchAllFragment"
        android:label="fragment_search_all"
        tools:layout="@layout/fragment_search_all" />

</navigation>