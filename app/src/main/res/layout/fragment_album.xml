<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".ui.albumfragments.fragments.AlbumFragment">


   <TextView
       android:id="@+id/tvAlbums"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="26sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:text="@string/tvAlbums"
       android:textColor="@color/white"
       />
    
    <androidx.appcompat.widget.SearchView
        android:id="@+id/svAlbums"
        android:layout_width="372dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlbums"
        android:queryHint="Search"
        app:iconifiedByDefault="false"
        android:background="@drawable/serach_corner"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlbums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svAlbums"
        />



</androidx.constraintlayout.widget.ConstraintLayout>