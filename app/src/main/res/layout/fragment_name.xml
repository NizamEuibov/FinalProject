<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="25dp"
        >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:scaleType="center"
            android:layout_gravity="center"
            app:tint="@color/bbColor"
            android:contentDescription="@string/todo"
            android:layout_margin="6dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAccount"
        android:layout_width="152dp"
        android:layout_height="20dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="138dp"
        android:text="@string/accountText"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cvBack"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="190dp"
        android:layout_height="27dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="207dp"
        android:text="@string/nameText"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAccount" />


    <EditText
        android:id="@+id/etRegistration"
        android:layout_width="365dp"
        android:layout_height="51dp"
        android:textColor="@color/white"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="32dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/edittextcorner"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />


    <TextView
        android:id="@+id/tvTextName"
        android:layout_width="150dp"
        android:layout_height="17dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="252dp"
        android:text="@string/tvTextName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRegistration" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="362dp"
        android:layout_height="1dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="@color/bbColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etRegistration" />

    <LinearLayout
        android:id="@+id/tvLayout1"
        android:layout_width="333dp"
        android:layout_height="110dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="56dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="@string/cv1First"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvUse"
            android:layout_width="155dp"
            android:layout_height="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="21dp"
            android:text="@string/cv1Second"
            android:textColor="@color/grey"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/cv1Third"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvLayout2"
        android:layout_width="310dp"
        android:layout_height="132dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="78dp"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toTopOf="@id/buttonAccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLayout1">

        <TextView
            android:id="@+id/tvPolicy"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:text="@string/cv2First"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="155dp"
            android:layout_height="15dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="177dp"
            android:layout_marginBottom="34dp"
            android:text="@string/cv2Second"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/cv2Third"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/rb2Name"
        android:layout_width="26dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toEndOf="@id/tvLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rb1Name"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="24dp"
        />

    <CheckBox
        android:id="@+id/rb1Name"
        android:layout_width="26dp"
        android:layout_height="25dp"
        app:layout_constraintBottom_toBottomOf="@id/tvLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvLayout2"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="7dp"/>

    <Button
        android:id="@+id/buttonAccount"
        android:layout_width="179dp"
        android:layout_height="42dp"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="133dp"
        android:backgroundTint="@color/white"
        android:text="@string/buttonNameText"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>