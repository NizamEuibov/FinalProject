<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.track.fragment.TrackShareFragment">


    <ImageButton
        android:id="@+id/fabExit"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="65dp"
        android:backgroundTint="@color/background"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvShare"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginHorizontal="147dp"
        android:layout_marginTop="65dp"
        android:text="@string/track_share"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivTrack"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="124dp"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShare" />


    <TextView
        android:id="@+id/tvTrackName"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTrack" />

    <TextView
        android:id="@+id/tvArtistName"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/bbColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTrackName" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArtistName">

        <ImageButton
            android:id="@+id/ibLink"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:background="@drawable/round_ic"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_link"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/track_copy_link"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/ibLink"
            app:layout_constraintTop_toBottomOf="@id/ibLink" />


        <ImageButton
            android:id="@+id/ibWhatsapp"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/round_whatsapp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_whatsapp"
            app:layout_constraintStart_toEndOf="@id/ibLink"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWhatsapp"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/track_whatsapp"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/ibWhatsapp"
            app:layout_constraintTop_toBottomOf="@id/ibWhatsapp" />


        <ImageButton
            android:id="@+id/ibTwitter"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/round_twitter"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_twitter"
            app:layout_constraintStart_toEndOf="@id/ibWhatsapp"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTwitter"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/track_twitter"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/ibTwitter"
            app:layout_constraintTop_toBottomOf="@id/ibTwitter" />


        <ImageButton
            android:id="@+id/ibMessage"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/round_whatsapp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_message"
            app:layout_constraintStart_toEndOf="@id/ibTwitter"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/track_message"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/ibMessage"
            app:layout_constraintTop_toBottomOf="@id/ibMessage" />


        <ImageButton
            android:id="@+id/ibMore"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_ic"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_3point"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLink" />


        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginTop="10dp"
            android:text="@string/track_more"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/ibMore"
            app:layout_constraintTop_toBottomOf="@id/ibMore" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>